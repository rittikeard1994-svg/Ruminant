    ];

    const historyDays = ["Mon","Tue","Wed","Thu","Fri","Sat","Sun"];
    const historyRumi = [480, 505, 520, 495, 460, 530, 510];
    const historyMilk = [18, 20, 22, 21, 19, 24, 23];

    // ------ ‡πÄ‡∏ï‡∏¥‡∏°‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏£‡∏∏‡∏õ ------
    const avg = Math.round(herd.reduce((a,b)=>a + b.rumiToday, 0) / herd.length);
    document.getElementById("avgRumi").textContent = `‡πÄ‡∏Ñ‡∏µ‡πâ‡∏¢‡∏ß‡πÄ‡∏≠‡∏∑‡πâ‡∏≠‡∏á‡πÄ‡∏â‡∏•‡∏µ‡πà‡∏¢ ${avg} ‡∏ô‡∏≤‡∏ó‡∏µ`;

    // ------ ‡πÅ‡∏™‡∏î‡∏á‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡πÇ‡∏Ñ ------
    const herdList = document.getElementById("herdList");
    herd.forEach(c => {
      const dev = Math.round(((c.rumiToday - c.baseline) / c.baseline) * 100);
      let color = "bg-green-100 text-green-700";
      if (dev < -15) color = "bg-red-100 text-red-700";
      else if (dev < -5) color = "bg-yellow-100 text-yellow-700";

      const item = document.createElement("div");
      item.className = "flex items-center justify-between rounded-2xl border p-4 bg-white";
      item.innerHTML = `
        <div class="flex items-center gap-3">
          <div class="w-6 h-6 grid place-items-center text-lg">üè∑Ô∏è</div>
          <div>
            <div class="font-medium">#${c.id} ${c.name} ¬∑ DIM ${c.dim}</div>
