    const lineCtx = document.getElementById('rumiLine');
    new Chart(lineCtx, {
      type: 'line',
      data: {
        labels: historyDays,
        datasets: [{
          label: 'Rumi (min)',
          data: historyRumi,
          borderWidth: 2,
          tension: .35
        }]
